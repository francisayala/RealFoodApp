<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#3A3F4F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza Margarita"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Descripción -->
        <TextView
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tomate, mozzarella y albahaca fresca"
            android:textColor="#B0B0B0"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Precio -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="$8.50"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Botón "Agregar" (visible cuando quantity = 0) -->
        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="+ Agregar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#673AB7"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <!-- Controles de cantidad (visible cuando quantity > 0) -->
        <LinearLayout
            android:id="@+id/quantityControls"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:background="#673AB7"
            android:gravity="center"
            android:visibility="gone">

            <!-- Botón menos (-) -->
            <ImageButton
                android:id="@+id/decreaseButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_delete"
                android:contentDescription="Disminuir"
                app:tint="#FFFFFF" />

            <!-- Contador de cantidad -->
            <TextView
                android:id="@+id/quantityText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Botón más (+) -->
            <ImageButton
                android:id="@+id/increaseButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="Aumentar"
                app:tint="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
